@using UmbracoFundamentals.Models.Constants
@using UmbracoFundamentals.Models.Content;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Shop>
@{
	Layout = "ChildPage.cshtml";

	var productsPage = Model.Root().FirstChild<Shop>();
	var products = productsPage?.Children()?.ToArray() ?? [];
}
<section class="bg-grey">
    <div class="container">
        <div class="section-content">
            <div class="title-wrap mb-5">
                <h2 class="section-title">Our products</h2>
                <p class="section-sub-title">Satisfy your deeply ingrained need for material possessions with some of these items.</p>
            </div>
            <div class="row">
                <div class="col-md-12 blog-holder">
                    <div class="row">
                        @foreach (var item in products)
                        {
                            <div class="col-md-4 blog-item-wrapper">
                                <div class="blog-item">
                                    <div class="blog-img">
                                        <a href="@item.Url()">
                                        @{
                                            var image = item.Value<IPublishedContent>("previewImage");
                                            if (image != null)
                                            {
                                                var mediaCrop = Url.GetCropUrl(image, ImageCropAliases.ProductThumbnail);
                                                <img src="@mediaCrop" alt="@image.Name">
                                            }
                                            else
                                            {
                                                <img src="https://placehold.co/400x250" alt="">
                                            }
                                        }
                                        </a>
                                    </div>
                                    <div class="blog-text">
                                        <div class="blog-title">
                                            <a href="@item.Url()"><h4>@item.Name</h4></a>
                                        </div>
                                        <div class="blog-desc">
                                            @*You can implement a description here*@
                                        </div>

                                        <div class="blog-price">
                                            @*You can implement a price here*@
                                        </div>
                                        <div style="display:inline-block" class="blog-share-wrapper">
                                            <button type="button" class="btn btn-outline-primary" disabled="disabled">OUT OF STOCK</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>