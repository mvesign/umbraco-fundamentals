@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<UmbracoFundamentals.Models.Content.TextPage>
@{
    Layout = "ChildPage.cshtml";

    var childeren = Model.AncestorOrSelf(2).Children().ToArray();
}
<section id="single-content" class="bg-white">
    <div class="container">
        <div class="section-content blog-content">
            <div class="row">
                <div class="col-md-8 offset-md-2 mt-4">
                    @Model.BodyText
                </div>
                <div class="col-md-2 mt-4 align-self-start">
                    @if (childeren.Length > 0)
                    {
                        <ul class="side-nav">
                        
                            @foreach (var child in childeren)
                            {
                                <li>
                                    <h6 class="uppercase">
                                        <a class="@(Model.Name == child.Name ? "nav-current" : string.Empty)" href="@child.Url()">@child.Name</a>
                                    </h6>
                                </li>
                            }
                        </ul>
                    }
                </div>
            </div>
        </div>
    </div>
</section>