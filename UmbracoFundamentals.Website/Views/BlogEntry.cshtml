@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<UmbracoFundamentals.Models.Content.BlogEntry>
@{
	Layout = "ChildPage.cshtml";

    const string DefaultImageUrl = "https://placehold.co/400x250";
}
<section id="single-content" class="bg-white">
    <div class="container">
        <div class="section-content blog-content">

            <div class="row">
                <div class="col-md-8 offset-md-2 mt-4">
                    @Model.Summary
                    <hr />
                    @if(Model.Image != null)
                    {
                        var mediaCrop = Url.GetCropUrl(Model.Image, "BlogHeader");
                        <img src="@(mediaCrop?.ToHtmlString() ?? DefaultImageUrl)" alt="@Model.Image.Name">
                    }
                    @Model.BodyText
                </div>
                <div class="col-md-2 mt-4 align-self-start">
                    You might also like:
                    <ul class="side-nav">
                        @foreach (var child in Model.Siblings())
                        {
                            <li>
                                <a class="@(Model.Name == child.Name ? "nav-current" : string.Empty)" href="@child.Url()">@child.Name</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>